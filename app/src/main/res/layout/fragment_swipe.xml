<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.SwipeFragment">


    <com.yuyakaido.android.cardstackview.CardStackView
        android:id="@+id/card_stack_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ibDislike"
        android:layout_marginBottom="0dp"
        android:padding="8dp" />

    <ImageButton
        android:id="@+id/ibRefresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#00FFFFFF"
        android:src="@drawable/ic_refresh" />

    <ImageButton
        android:id="@+id/ibLike"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="10dp"
        android:layout_toEndOf="@+id/ibRefresh"
        android:backgroundTint="#00FFFFFF"
        android:scaleX="1.4"
        android:scaleY="1.4"
        android:src="@drawable/ic_thumbs_up_green" />

    <ImageButton
        android:id="@+id/ibDislike"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="10dp"
        android:layout_toStartOf="@+id/ibRefresh"
        android:backgroundTint="#00FFFFFF"
        android:scaleX="1.4"
        android:scaleY="1.4"
        android:src="@drawable/ic_thumbs_down_red" />


</RelativeLayout>